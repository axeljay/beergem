<div class = "review" >
	<p><%= review.rating %></p>
	<p class = "review-comment"> <%= review.comment %> </p>

	<% if user_signed_in? %>
		<% if review.user_id == current_user.id %>
			<div class= "links btn-group">
                	<%= link_to 'Edit',
             edit_beer_review_path(review.beer, review),
             method: :get,
						 class:"btn btn-primary1 mb-3"%>

                	<%= link_to 'Delete',
             beer_review_path(review.beer, review),
             method: :delete,
						 class:"btn btn-primary1 mb-3",
             data: { confirm: 'Are you sure?' } %>


			</div>
		<% end %>
	<% end %>
</div>