	<article class="card-group-item">
		<header class="card-header">
			<h6 class="title">Beer Style </h6>
		</header>

		<div class="filter-content">
			<div class="card-body">
			<form>
				<label class="form-check">
				  <input class="form-check-input" type="checkbox" value="">
				  <span class="form-check-label">
				    IPA
				  </span>
				</label> <!-- form-check.// -->

				<label class="form-check">
				  <input class="form-check-input" type="checkbox" value="">
				  <span class="form-check-label">
				    Lager
				  </span>
				</label>  <!-- form-check.// -->

				<label class="form-check">
				  <input class="form-check-input" type="checkbox" value="">
				  <span class="form-check-label">
				    Stout
				  </span>
				</label>  <!-- form-check.// -->
			</form>
			</div> <!-- card-body.// -->
		</div>
	</article> <!-- card-group-item.// -->

	<!-- REGIONS -->
	<div class="card">
		<article class="card-group-item">
			<header class="card-header">
				<h6 class="title">Regions </h6>
			</header>

			<div class="filter-content">
				<div class="card-body">
				<form>
					<label class="form-check">
					  <input class="form-check-input" type="checkbox" value="">
					  <span class="form-check-label">
					    North America
					  </span>
					</label> <!-- form-check.// -->

					<label class="form-check">
					  <input class="form-check-input" type="checkbox" value="">
					  <span class="form-check-label">
